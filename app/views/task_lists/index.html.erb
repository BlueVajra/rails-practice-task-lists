<% flash.each do |_, flash_msg| %>
  <%= flash_msg %>
<% end %>

<% @task_lists.each do |task_list| %>

  <section class="task-list">
    <h1><%= task_list.name %> - <%= link_to "+Add Task", new_task_list_task_path(task_list.id) %></h1>
    <% task_list.tasks.each do |task| %>
      <%= task.description %>
      (<%= (task.due_date - Date.current).to_i %> days)
    <% end %>
  </section>

<% end %>