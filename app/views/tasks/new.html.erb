<% if @task.errors.present? %>
  <% @task.errors.full_messages.each do |error_msg| %>
    <%= error_msg %>
  <% end %>
<% end %>

<%= form_for @task, url: {action: "create"} do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :due_date %>
  <%= f.date_select :due_date, order: [:day, :month, :year], start_year: Date.today.year %>
  <%= f.submit "Create Task" %>
<% end %>